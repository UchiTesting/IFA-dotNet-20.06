<Window x:Class="_200602_Exo10_ProgressBarBW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_200602_Exo10_ProgressBarBW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
         <ColumnDefinition Width="50" />
      </Grid.ColumnDefinitions>
      <ProgressBar x:Name="PbComputation" Value="80" Orientation="Vertical" Foreground="DeepSkyBlue"/>
      <Label x:Name="LblResults" />
      <StackPanel Grid.Column="1">
         <Button x:Name="BtnStartCalc" Content="Start" Click="BtnStartCalc_Click"/>
         <Button x:Name="BtnStopCalc" Content="Stop" Click="BtnStopCalc_Click"/>
      </StackPanel>
   </Grid>
</Window>
